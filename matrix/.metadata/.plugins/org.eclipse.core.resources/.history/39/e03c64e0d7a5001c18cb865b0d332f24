package matrix;

import java.util.Scanner;

public class Matrix {

	static Scanner leia = new Scanner(System.in);

	public static void main(String[] args) {

		int menu = 0;

		while (menu != 8) {
			System.out.println("escolha:\n[1]exe 1.\t[2]exe 2.\nR:");
			menu = leia.nextInt();

			switch (menu) {
			case 1:
				exe1();
				break;
			case 2:
				exe2();
				break;
			case 3:
				break;
			case 4:
				break;
			case 5:
				break;
			case 6:
				break;
			case 7:
				break;
			case 8:
				System.out.println("Obrigado e usar nossos sistemas!!!");
				break;
			default:
				System.out.println("Tente novamente!");
				break;
			}
		}

	}

	public static void exe2() {
		System.out.println("-----------Oooo---\r\n"
				+ "-----------(----)---\r\n"
				+ "------------)--/----\r\n"
				+ "------------(_/-\r\n"
				+ "----oooO----\r\n"
				+ "----(---)----\r\n"
				+ "-----\\--(--\r\n"
				+ "------\\_)-\r\n"
				+ "-----------Oooo---\r\n"
				+ "-----------(----)---\r\n"
				+ "------------)--/----\r\n"
				+ "------------(_/-\r\n"
				+ "----oooO----\r\n"
				+ "----(---)----\r\n"
				+ "-----\\--(--\r\n"
				+ "------\\_)-");
	}
	public static void exe1() {
		int matrix[][] = new int[2][2];
		int maior = 0;
		for (int i = 0; i < 2; i++) {
			for (int j = 0; j < 2; j++) {
				System.out.print("Digite um numero: ");
				matrix[i][j] = leia.nextInt();
				if (maior < matrix[i][j]) {
					maior = matrix[i][j];
				}
			}
		}
		for (int i = 0; i < 2; i++) {
			for (int j = 0; j < 2; j++) {
				System.out.print(matrix[i][j] + " ");
			}
		}
		System.out.println(" ");
		System.out.println("O maior numero foi: " + maior);
	}

}
