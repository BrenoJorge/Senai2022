package correcao;

import java.util.Random;
import java.util.Scanner;

public class ExeRenie4 {

	public static void main(String[] args) {
		Scanner leia = new Scanner(System.in);

		int menu = 0;
		while (menu != 3) {
			System.out.println("Escolha uma opcao:\n[1]Cadastrar um novo aluno (Máx. 10).\t[2]Buscar aluno por matrícula e nome.\t[3]Aluno reprovado ou aprovado.\t[4]Exit.");
			menu = leia.nextInt();
			switch (menu) {
			case 1:
				
				break;
			case 2:

				break;
			case 3:
				System.out.println("Obrigado por usar nossos sistemas! :)");
				break;
			default:
				System.out.println("Tente novamente!");
				break;
			}
		}
	}
}
