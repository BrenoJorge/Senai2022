package correcao;

import java.util.Random;
import java.util.Scanner;

public class ExeRenie4 {

	public static void main(String[] args) {
		Scanner leia = new Scanner(System.in);
		
		String aluno[][] = new String[4][3];
		String matricula[][] = new String[4][3];
		int nota[][] = new int [4][3];
		
		int menu = 0;
		while (menu != 4) {
			System.out.println("Escolha uma opcao:\n[1]Cadastrar um novo aluno (Máx. 10).\t[2]Buscar aluno por matrícula e nome.\t[3]Aluno reprovado ou aprovado.\t[4]Exit.");
			menu = leia.nextInt();
			switch (menu) {
			case 1:
				int x = 0;
				while(x <= 2 ) {
				for(int i = 0; i < 4; i++) {
					for(int j = 0; j < 3; j++) {
						System.out.print("Nome do aluno: ");
						aluno[i][j] = leia.next();
						System.out.print("Nome do aluno: ");
						matricula[i][j] = leia.next();
						System.out.print("Nome do aluno: ");
						nota[i][j] = leia.nextInt();
					}
				}
				}
				x = leia.nextInt();
				break;
			case 2:

				break;
			case 3:
				System.out.println("Obrigado por usar nossos sistemas! :)");
				break;
			default:
				System.out.println("Tente novamente!");
				break;
			}
		}
	}
}
